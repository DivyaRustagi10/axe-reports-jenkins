pipeline {
    agent any

    environment {
        AXE_REPORTER_API_KEY = credentials('AXE_REPORTER_API_KEY') // Assuming you have stored the API key in Jenkins credentials
    }

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    dir('axe-reports-jenkins') {
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Install ChromeDriver') {
            steps {
                script {
                    // Install ChromeDriver and add it to the PATH
                    sh 'npm install chromedriver --save-dev'
                    env.PATH = "${env.WORKSPACE}/node_modules/.bin:${env.PATH}"
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    dir('axe-reports-jenkins') {
                        sh 'npm test'
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                def reportsDashJsonPath = './a11y-results'
                def dimensions = 'ProductA,App,MainComponent'

                withCredentials([string(credentialsId: 'AXE_REPORTER_API_KEY', variable: 'AXE_REPORTER_API_KEY')]) {
                    dir('axe-reports-jenkins') {
                        sh '''
                        npm run axe -- bulk-reports ${reportsDashJsonPath} --browser=chrome --axe-reports-api-key $AXE_REPORTER_API_KEY --send-axe-reports --axe-reports-dimensions=${dimensions} 
                        echo "Uploaded Reports to Axe Reports Dashboard"
                        '''
                    }
                }
            }
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}